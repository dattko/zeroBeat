{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "es2015", // 또는 es2016, es2017, es2018, es2019, es2020, esnext
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/app/api/*"],
      "@style/*": ["src/styles/*"],
      "@component/*": ["src/componenets/*"],
      "@page/*": ["src/pages/*"],
      "@type/*": ["src/types/*"],
      "@modal/*": ["src/componenets/modal/*"],
      "@redux/*": ["src/redux/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/componenets/spotify/DetailView"],
  "exclude": ["node_modules"]
}
